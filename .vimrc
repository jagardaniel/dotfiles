execute pathogen#infect()
" nvie/vim-flake8
" pearofducks/ansible-vim

filetype plugin indent on

colorscheme hybrid
syntax on
set background=dark

set hlsearch
set ignorecase
set smartcase
set cursorline
set showmatch
set ruler
set laststatus=2
set history=1000

set tabstop=4
set shiftwidth=4
set expandtab

inoremap jj <Esc>
nnoremap <Space> :noh<CR>
set pastetoggle=<F2>
