colorscheme hybrid                  " set colorscheme
filetype plugin indent on           " indent based on filetype
syntax on                           " syntax hightlighting

set hlsearch                        "highlight searches
set ignorecase                      " ignore case when searching
set smartcase                       " case sensitive if uppercase letter
set cursorline                      " horizontal cursor line
set showmatch                       " hilight matching
set ruler                           " display ruler

set tabstop=4                       " number of spaces of tab character
set shiftwidth=4                    " number of spaces to (auto)indent
set expandtab                       " use spaces instead of tabs

set undolevels=100                  " number of undo levels

inoremap jj <Esc>                   " jj to exit from insert mode
