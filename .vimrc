execute pathogen#infect()

filetype plugin indent on

colorscheme hybrid
set background=dark
syntax on

set hlsearch
set ignorecase
set smartcase
set cursorline
set showmatch
set ruler
set laststatus=2
set history=1000
set backspace=indent,eol,start
set nocompatible
set splitright
set splitbelow                                                                                                       

set tabstop=4
set shiftwidth=4
set expandtab

let mapleader = ","
inoremap jj <Esc>
nnoremap <F3> :noh<CR>
set pastetoggle=<F2>

nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
