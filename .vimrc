set nocompatible
filetype plugin indent on

syntax enable
set background=dark
colorscheme codedark

set ruler
set number
set laststatus=2
set wildmenu
set showmatch
set showcmd

set incsearch
set hlsearch
set ignorecase
set smartcase

set autoindent
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4

set splitright
set splitbelow

set backspace=indent,eol,start
set history=1000

set visualbell t_vb=

let mapleader=","
inoremap jj <Esc>
set pastetoggle=<F2>

let g:netrw_banner = 0
